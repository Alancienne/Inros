<div class="archive-post-card pm-{{date format="M"}} js-post-card-wrap">
    <div class="pm h4">{{date format="MMMM YYYY"}}</div>
    <article class="archive-post">
        <div class="inner">
            <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMM DD"}} - </time>
            <h2 class="title"><a href="{{url}}">{{title}}</a></h2>
        </div>
    </article>
</div>