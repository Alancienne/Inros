{{!< default-no-header-footer}}
{{!-- The tag above means: insert everything in this file into the {body} of the default-no-header-footer.hbs template --}}
<div class="main">
    {{#if @member}}
    <script>window.location = '{{@site.url}}/account/';</script>
    {{else}}
    {{!-- start including custom style for cover image --}}
    {{#post}}
    {{#if feature_image}}
    {{> scripts/cover-image-style background=feature_image}}
    {{/if}}
    {{/post}}
    {{!-- ending cover image css --}}
    <div class="members-page-wrap{{#post}}{{#if feature_image}} responsive-header-img{{/if}}{{/post}}">
        <div class="members-content-wrap">
            <div class="members-wrap">
                {{!-- logo start --}}
                <div class="header-logo logo-wrap">
                    {{> logo}}
                </div>
                {{!-- logo end --}}
                <h1 class="members-title h4 text-center">
                    {{t "Sign in"}}
                </h1>
                <div class="members-description text-center">
                    {{t "Sign into your account for full access"}}
                </div>
                <form class="members-form text-left js-member-form" data-members-form="login" autocomplete="off">
                    <div class="members-form-box">
                        <div class="form-field-wrap">
                            <label for="email" class="sr-only">Email</label>
                            <input data-members-email="" type="email" class="email form-field" id="email" placeholder="{{t "Your email address"}}" required="" autocomplete="off">
                            <button class="btn btn-block form-field" type="submit" name="submit"><span>{{t "Send login link"}}</span></button>
                        </div>
                    </div>
                    <div class="message-container">
                        <div class="notification success form-notification">
                            <a class="notification-close" href="javascript:;" aria-label="close notification"><span class="close-icon"><svg><use xlink:href="#i-close"/></svg></span></a>
                            <strong>{{t "Great!"}}</strong> {{t " Check your inbox and click the link to complete sign in."}}</span>
                        </div>
                        <div class="notification error form-notification">
                            <a class="notification-close" href="javascript:;" aria-label="close notification"><span class="close-icon"><svg><use xlink:href="#i-close"/></svg></span></a>
                            <strong>{{t "Error!"}}</strong> {{t "Sorry, something went wrong. Please try again."}}
                        </div>
                        
                    </div>
                </form>
                <div class="alternate-option text-center">
                    {{t "Don't have an account yet?"}} {{#link href="/signup/"}}{{t "Sign up"}}{{/link}}
                </div>
            </div>
        </div>
    </div>
    {{/if}}
</div>