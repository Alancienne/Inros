{{!< default}}
{{!-- The tag above means: insert everything in this file into the {body} of the default.hbs template --}}

{{#post}}
<div class="main">
    <div class="container">
        <div class="row">
            <div class="col">
                <article class="single-post post-card  {{^if feature_image}}no-image{{/if}}">
                    <header class="post-header">
                        <h1 class="heading-large page-title text-center">
                            {{title}}
                        </h1>
                        {{#if custom_excerpt}}
                        <div class="custom-excerpt">
                            {{custom_excerpt}}
                        </div>
                        {{/if}}
                    </header>
                    {{#if feature_image}}
                    <div class="featured-image-wrap">
                        <img class="featured-image" loading="lazy"
                        srcset="{{img_url feature_image size=" s"}} 300w,
                        {{img_url feature_image size="m" }} 600w,
                        {{img_url feature_image size="l" }} 1200w,"
                        sizes="(max-width: 340px) 300px, (max-width: 640px) 600px, 1200px"
                        src="{{img_url feature_image size=" l"}}" alt="{{title}}">
                    </div>
                    {{/if}}
                    <div class="post-content">
                        {{content}}
                    </div>
                </article>
            </div>
        </div>
    </div>
</div>
{{/post}}
{{!-- Show subscription section to guest visitors --}}
{{#unless @member}}
{{> newsletter-subscription}}
{{/unless}}