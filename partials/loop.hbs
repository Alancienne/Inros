
{{#foreach posts}}
<div class="col-lg-4 col-md-6 col-sm-6 js-post-card-wrap">
    <article class="post-card flex">
        {{#if feature_image}}
        <a href="{{url}}" class="post-img-wrap">
            <img loading="lazy" 
            srcset="{{img_url feature_image size="xs"}} 250w,
                    {{img_url feature_image size="s"}} 400w,
                    {{img_url feature_image size="m"}} 600w, 
                    {{img_url feature_image size="l"}} 1000w"
            sizes="(max-width:432px) 400px, (min-width:945px) and (max-width:992px) 600px, (max-width:1420px) 400px, 600px"
            src="{{img_url feature_image size="xs"}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}">
        </a>
        {{/if}}
        <div class="post-info-wrap">
            {{#primary_tag}}
            <div class="tag-wrap">
                <a href="{{url}}" {{#if accent_color}} style="--c-theme:{{accent_color}};"{{/if}}>{{name}}</a>
            </div>
            {{/primary_tag}}
            <h2 class="h3 post-title"><a href="{{url}}">{{title}}</a></h2>
            <div class="post-excerpt">
                {{excerpt}}
            </div>
            {{> post-card-meta}}
        </div>
    </article>
</div>
{{/foreach}}