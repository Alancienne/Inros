{{#get "posts" limit="4" filter="tag:{{primary_tag.slug}}+id:-{{comment_id}}" include="tags"}}
{{#if posts}}
<div class="related-posts-wrap">
    <div class="container">
        <h3 class="section-title h5 text-center">{{t "You might also like"}}</h3>
        <div class="row">
            {{#foreach posts}}
            <div class="col-lg-3 col-md-6 col-sm-6">
                <article class="post-card">
                {{#if feature_image}}
                <a href="{{url}}" class="post-img-wrap">
                    <img class="post-img" loading="lazy"
                        srcset="{{img_url feature_image size="s"}} 300w,
                                {{img_url feature_image size="m"}} 600w"
                        sizes="(max-width: 575px) 300px,(min-width: 576px) and (max-width:680px) 600px, (min-width:681px) and (max-width: 991px) 600px, 300px"
                        src="{{img_url feature_image size="s"}}" alt="{{title}}">
                </a>
                {{/if}}
                <div class="post-info-wrap">
                    <h4 class=" post-title"><a href="{{url}}">{{title}}</a></h4>
                    <div class="post-meta">
                        <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMM DD, YYYY"}}</time>
                        <span class="read-time">{{reading_time minute=(t "1 min read") minutes=(t "% min read")}}</span>
                    </div>
                </div>
            </article>
            </div>
            {{/foreach}}
        </div>
    </div>
</div>
{{/if}}
{{/get}}